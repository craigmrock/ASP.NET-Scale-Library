@page 
@model ScaleLibrary.Pages.GuitarScales.IndexModel

@{
    ViewData["Title"] = "Index";
}
@* cshtml files have HTML markup with C# code using Razor syntax *@
<h1>Index</h1>

<p>
    @*<a asp-page="Create">Create New</a>*@
</p>

<form>
    <p>
        Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GuitarScale[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuitarScale[0].Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuitarScale[0].Formula)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.GuitarScale) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Formula)
            </td>
            <td>
                @*<a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |*@
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> 
                @*<a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
